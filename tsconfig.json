{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "lib": ["ES6", "ES2015", "DOM"],
    "declaration": false,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "types": ["node", "reflect-metadata"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  }
}